{
    "name": "next-amplify",
    "private": true,
    "description": "This is example of Amplify Next.js App",
    "author": "Przemek Lewtak",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "prebuild": "rimraf dist",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint . --fix",
        "test": "jest --config ./jest.config.js",
        "test:watch": "jest --config ./jest.config.js --watch",
        "test:cov": "jest --coverage",
        "test-e2e:cov": "jest --coverage --config ./jest-e2e.config.js",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./jest-e2e.config.js",
        "lint:fix": "eslint --fix .",
        "prepare": "husky install",
        "check-format": "prettier --check .",
        "check-lint": "eslint . --ext ts --ext tsx --ext js",
        "test-all": "yarn check-format && yarn check-lint && yarn check-types",
        "format": "prettier --write .",
        "prettier": "prettier {*,src/*,src/**/*} --write --ignore-unknown",
        "lint-staged": "lint-staged"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/user-event": "^13.5.0",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/eslint-plugin-tslint": "^5.11.0",
        "next": "12.0.10",
        "next-images": "^1.8.4",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-test-renderer": "^17.0.2"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.16.7",
        "@babel/types": "^7.17.0",
        "@next/eslint-plugin-next": "^12.0.10",
        "@testing-library/react": "^12.1.2",
        "@types/node": "17.0.16",
        "@types/react": "17.0.39",
        "@types/react-test-renderer": "^17.0.1",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^27.5.0",
        "babel-plugin-import": "^1.13.3",
        "babel-plugin-inline-react-svg": "^2.0.1",
        "babel-plugin-styled-components": "^2.0.2",
        "eslint": "8.8.0",
        "eslint-config-next": "12.0.10",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.5.0",
        "jest-dom": "^4.0.0",
        "jest-environment-jsdom": "^27.5.0",
        "next-router-mock": "^0.6.5",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "typescript": "4.5.5"
    }
}
